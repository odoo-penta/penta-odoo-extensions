<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista list partner type -->
    <record id="product_template_form_view_inherit_penta" model="ir.ui.view">
        <field name="name">product.template.form.inherit.penta</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoicing']" position="inside">
                <notebook>
                    <page string="Financing" name="financing">
                        <group>
                            <field name="financing_product"/>
                            <field name="financing_interest_product"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
