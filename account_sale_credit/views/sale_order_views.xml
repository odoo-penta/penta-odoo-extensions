<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Terminos de pago -->
    <record id="view_order_form_inherit_penta" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.penta</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']/field[@name='order_line']" position="attributes">
                <attribute name="readonly">state == 'cancel' or locked or applied_financing</attribute>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Financing" name="financing" invisible="not active_financing">
                    <group>
                        <field name="active_financing" invisible="1"/>
                        <field name="recalculation_pending" invisible="1"/>
                        <field name="applied_financing" invisible="1"/>
                        <field name="financing_locked" invisible="1"/>
                        <button name="action_apply_financing"
                            type="object"
                            string="Apply financing"
                            class="btn-primary"
                            invisible="recalculation_pending or applied_financing"/>
                        <group>
                            <field name="entry_percentage" readonly="financing_locked"/>
                            <field name="risk_percentage" readonly="financing_locked"/>
                            <field name="interest"/>
                            <field name="month_interest"/>
                            <field name="apply_interest_grace" widget="boolean_toggle"/>
                            <field name="proration" widget="boolean_toggle" invisible="not apply_interest_grace"/>
                        </group>
                        <group>
                            <field name="months_of_grace" readonly="financing_locked"/>
                            <field name="minimum_fee"/>
                            <field name="payment_period"/>
                            <field name="factor_to_apply" readonly="financing_locked"/>
                            <field name="financing_amount"/>
                            <field name="total_interest_amount"/>
                        </group>
                        <button name="action_recalculate_financing"
                            type="object"
                            string="Recalculate"
                            class="btn-primary"
                            invisible="not recalculation_pending"/>
                    </group>
                    <notebook>
                        <page name="deferred_lines" string="Amortization Table">
                            <field name="line_deferred_ids">
                                <list>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="month"/>
                                    <field name="initial_balance"/>
                                    <field name="interest_amount" sum="total"/>
                                    <field name="amortization" sum="total"/>
                                    <field name="additional_grace_interest" sum="total"/>
                                    <field name="fixed_fee"/>
                                    <field name="final_balance"/>
                                    <field name="due_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
