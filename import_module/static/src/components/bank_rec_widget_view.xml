<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="import_module.BankRecRecordFormLine" t-inherit="account_accountant.BankRecRecordFormLineIds" t-inherit-mode="extension">
        <xpath expr="//t[@name='col_taxes']" position="before">
            <!-- Vehicle -->
            <t t-if="column[0] === 'id_import'" name="col_id_import">
                <td class="o_data_cell o_field_cell o_field_widget o_list_many2one"
                    t-att-class="{'o_invalid_cell': invalidFields.includes('id_import')}"
                    field="id_import"
                    t-att-title="line.data.id_import[1]"
                    t-out="line.data.id_import[1]"/>
            </t>
        </xpath>
    </t>
    <t t-name="import_module.BankRecRecordNotebookManualOperationsImport"
    t-inherit="account_accountant.BankRecRecordNotebookManualOperations"
    t-inherit-mode="extension">

        <xpath expr="//div[@name='suggestion']" position="before">
            <div name="id_import"
                t-if="line.data.flag !== 'liquidity'"
                class="o_wrap_field d-flex d-sm-contents flex-column mb-3 mb-sm-0">

                <div class="o_cell o_wrap_label flex-grow-1 flex-sm-grow-0 w-100 text-break text-900">
                    <label class="o_form_label">Guía de importación</label>
                </div>

                <div class="o_cell o_wrap_input flex-grow-1 flex-sm-grow-0 w-100 mb-1">
                    <div class="o_field_widget o_field_many2one">
                        <Many2OneField
                            name="'id_import'"
                            record="line"
                            canOpen="false"
                            readonly="reconciled"
                            canQuickCreate="false"
                        />
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
