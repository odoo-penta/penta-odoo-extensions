<!-- views/choose_landed_cost_wizard_view.xml -->
<odoo>
    <record id="view_choose_landed_cost_wizard_form" model="ir.ui.view">
        <field name="name">choose.landed.cost.wizard.form</field>
        <field name="model">choose.landed.cost.wizard</field>
        <field name="arch" type="xml">
            <form string="Seleccionar Costo en Destino">
                <group>
                    <field name="option"/>
                    <field name="landed_cost_id" invisible="option != 'associate'" />
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_view_move_form_inherited_custom_landed_cost" model="ir.ui.view">
        <field name="name">account.view.move.form.inherited.custom.landed.cost</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

           <xpath expr="//field[@name='state']/..//t[@groups='stock.group_stock_manager']" position="replace">
            <t groups="stock.group_stock_manager">
                <field name="landed_costs_visible" invisible="1"/>
                <button name="action_open_choose_landed_cost_wizard"
                        class="oe_highlight"
                        string="Costos en destino"
                        type="object"
                        data-hotkey="l"
                        groups="account.group_account_invoice"
                        invisible="not landed_costs_visible"/>
            </t>
        </xpath>
        </field>
    </record>
</odoo>
