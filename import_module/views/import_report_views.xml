<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard -->
    <record id="view_penta_import_report_wizard_form" model="ir.ui.view">
        <field name="name">penta.import.report.wizard.form</field>
        <field name="model">penta.import.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Importaciones">
                <group>
                    <group>
                        <field name="import_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="select_all"/>
                        <field name="field_ids"
                               widget="many2many_tags"
                               options="{'no_create': True}"
                               invisible="select_all"/>
                    </group>
                </group>
                <footer>
                    <button string="Exportar Excel" type="object" name="action_export_xlsx" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del wizard -->
    <record id="action_penta_import_report_wizard" model="ir.actions.act_window">
        <field name="name">Importaciones</field>
        <field name="res_model">penta.import.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Configuración de campos (lista sin attrs/context) -->
    <record id="view_penta_import_report_field_list" model="ir.ui.view">
        <field name="name">penta.import.report.field.list</field>
        <field name="model">penta.import.report.field</field>
        <field name="arch" type="xml">
            <list string="Campos del Reporte">
                <field name="sequence"/>
                <field name="active"/>
                <field name="name"/>
                <field name="technical_key"/>
                <field name="model_name"/>
                <field name="compute_type"/>
                <field name="method_name"/>
                <field name="field_expr"/>
            </list>
        </field>
    </record>

    <record id="view_penta_import_report_field_form" model="ir.ui.view">
        <field name="name">penta.import.report.field.form</field>
        <field name="model">penta.import.report.field</field>
        <field name="arch" type="xml">
            <form string="Campo parametrizable">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="technical_key"/>
                    </group>
                    <group>
                        <field name="model_name"/>
                        <field name="compute_type"/>
                    </group>
                    <group>
                        <field name="method_name"/>
                        <field name="field_expr"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <!-- Acción para abrir la lista -->
    <record id="action_penta_import_report_line" model="ir.actions.act_window">
        <field name="name">Importaciones</field>
        <field name="res_model">penta.import.report.line</field>
        <field name="view_mode">list,pivot,form</field>
        <field name="view_id" ref="view_penta_import_report_line_list"/>
        <field name="target">current</field>
    </record>
    <record id="action_open_import_report_autogen" model="ir.actions.server">
        <field name="name">Importaciones (Auto)</field>
        <field name="model_id" ref="import_module.model_penta_import_report_line"/>
        <field name="state">code</field>
        <field name="code">run_id = model.sudo().generate_report_for_menu()
action = env.ref('import_module.action_penta_import_report_line').read()[0]
if run_id:
    action['domain'] = [('run_id', '=', run_id)]
action</field>
    </record>


    <record id="action_penta_import_report_field" model="ir.actions.act_window">
        <field name="name">Campos del Reporte</field>
        <field name="res_model">penta.import.report.field</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ====== Menú: Import / Reportes / Importaciones ====== -->
    <menuitem id="menu_penta_import_reports_root"
              name="Reportes"
              parent="import_module.menu_import_module_root"
              sequence="80"/>

    <menuitem id="menu_penta_import_report_root"
              name="Importaciones"
              parent="menu_penta_import_reports_root"
              action="action_open_import_report_autogen"
              sequence="10"/>

    <!-- (Opcional) menú para configurar campos -->
    <menuitem id="menu_penta_import_report_config"
              name="Campos del Reporte"
              parent="menu_penta_import_reports_root"
              action="action_penta_import_report_field"
              sequence="90"/>
</odoo>
