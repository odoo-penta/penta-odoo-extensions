<odoo>
  <record id="view_lc_taxes_io_wizard_form" model="ir.ui.view">
    <field name="name">lc.taxes.io.wizard.form</field>
    <field name="model">lc.taxes.io.wizard</field>
    <field name="arch" type="xml">
      <form string="Exportar / Importar Impuestos">
        <group>
          <group>
            <field name="export_filename" readonly="1"/>
            <field name="export_file" filename="export_filename" readonly="1"/>
          </group>
          <group>
            <field name="import_filename" readonly="1"/>
            <field name="import_file" filename="import_filename"/>
          </group>
        </group>
        <footer>
          <!-- Generar XLSX siempre visible -->
          <button name="action_generate_xlsx"
                  string="Generar XLSX"
                  type="object"
                  class="btn-primary"/>

          <!-- Importar XLSX solo visible si hay export_file y se cargÃ³ import_file -->
          <button name="action_confirm_import"
                  string="Importar XLSX"
                  type="object"
                  class="btn-success"
                  invisible="export_file == False or import_file == False"/>

          <button string="Cerrar" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
