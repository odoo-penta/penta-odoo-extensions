<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_picking_form_inherit_import" model="ir.ui.view">
    <field name="name">stock.picking.form.inherit.import</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <!-- Insertar debajo de picking_type_id y ocultar salvo recepciones -->
      <xpath expr="//field[@name='picking_type_id']" position="after">
        <field name="id_import" readonly="1" invisible="picking_type_code != 'incoming'"/>
      </xpath>
    </field>
  </record>
</odoo>
