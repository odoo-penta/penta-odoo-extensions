<odoo>
  <record id="view_tariff_item_list" model="ir.ui.view">
    <field name="name">tariff.item.list</field>
    <field name="model">tariff.item</field>
    <field name="arch" type="xml">
      <list>
        <field name="code"/>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="view_tariff_item_form" model="ir.ui.view">
    <field name="name">tariff.item.form</field>
    <field name="model">tariff.item</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
            <field name="description"/>
          </group>
          <notebook>
            <page string="LÃ­neas">
              <field name="line_ids">
                <list editable="bottom">
                  <field name="product_id"/>
                  <field name="date_from"/>
                  <field name="percentage"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_tariff_item" model="ir.actions.act_window">
    <field name="name">Partidas Arancelarias</field>
    <field name="res_model">tariff.item</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_tariff_item" name="Partidas Arancelarias" parent="menu_purchase_config_importaciones" action="action_tariff_item"/>

    <record id="view_template_property_form_tariff" model="ir.ui.view">
        <field name="name">product.template.tariff.item.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <field name="tariff_item_id"/>
            </xpath>
        </field>
    </record>


</odoo>
