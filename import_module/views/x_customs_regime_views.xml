<odoo>
    <!-- Vista Formulario -->
    <record id="view_customs_regime_form" model="ir.ui.view">
        <field name="name">x.customs.regime.form</field>
        <field name="model">x.customs.regime</field>
        <field name="arch" type="xml">
            <form string="Régimen Aduanero">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Lista -->
    <record id="view_customs_regime_list" model="ir.ui.view">
        <field name="name">x.customs.regime.list</field>
        <field name="model">x.customs.regime</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Acción para abrir el modelo -->
    <record id="action_customs_regime" model="ir.actions.act_window">
        <field name="name">Régimenes Aduaneros</field>
        <field name="res_model">x.customs.regime</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
