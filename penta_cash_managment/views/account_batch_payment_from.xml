<odoo>
    <record id="view_batch_payment_form_form_custom" model="ir.ui.view">
        <field name="name">batch_payment_form_form_custom</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='print_batch_payment']" position="after">
                <button name="action_print_batch_payment"
                        string="Generar Cash Management"
                        type="object"/>
            </xpath>
        </field>
    </record>
</odoo>
