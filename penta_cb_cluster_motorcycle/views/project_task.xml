<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <record id="view_project_form_stock_lot" model="ir.ui.view">
        <field name="name">view.project.form.stock.lot</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="before">
               <field name='lot_id'></field>
               <field name='product_id' readonly='1'></field>
            </xpath>            
        </field>
    </record>
</odoo>