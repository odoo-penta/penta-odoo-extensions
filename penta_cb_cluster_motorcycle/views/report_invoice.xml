<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_tbody_inherti_edi" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@name='invoice_line_table']/thead/tr[1]/th[1]" position="before">
            <th name="th_detalles_adicionales" class="text-start">
                <span>Detalles Adicionales</span>
            </th>
        </xpath>

        <xpath expr="//tbody[@class='invoice_tbody']" position="replace">
            <t t-set="lotes_linea_usados" t-value="[]"/>
            <tbody class="invoice_tbody">
                <t t-set="current_subtotal" t-value="0"/>
                <t t-set="current_total" t-value="0"/>
                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                <t t-foreach="lines" t-as="line">
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                    <t t-set="current_total" t-value="current_total + line.price_total"/>

                    <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">

                        <!-- PRODUCTO -->
                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">

                            <!-- Recorremos la cantidad -->
                            <t t-set="qty_units" t-value="list(range(int(line.quantity or 0)))"/>

                            <t t-foreach="qty_units" t-as="u_index">
                                <tr>
                                    <td name="account_invoice_line_name">
                                        <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>

                                    <!-- Cantidad fija a 1 por unidad -->
                                    <td name="td_quantity" class="o_td_quantity text-end">
                                        <span class="text-nowrap">1</span>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>

                                    <!-- Precio unitario -->
                                    <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </td>

                                    <!-- Descuento -->
                                    <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </td>

                                    <!-- Impuestos -->
                                    <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                                    <td name="td_taxes"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                        <span t-out="taxes" id="line_tax_ids"/>
                                    </td>

                                    <!-- Subtotal por unidad -->
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <span class="text-nowrap"
                                            t-out="'%.2f' % (line.price_subtotal / (line.quantity or 1))"/>
                                    </td>

                                </tr>
                            </t>
                        </t>

                        <!-- SECCIÓN -->
                        <t t-elif="line.display_type == 'line_section'">
                            <td colspan="99">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                        </t>

                        <!-- NOTA -->
                        <t t-elif="line.display_type == 'line_note'">
                            <td colspan="99">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                        </t>

                    </tr>

                    <!-- SUBTOTAL DE SECCIÓN -->
                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                        <tr class="is-subtotal text-end">
                            <td colspan="99">
                                <strong class="mr16">Subtotal</strong>
                                <span
                                    t-out="current_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </t>
            </tbody>
        </xpath>
        
        <xpath expr="//table[@name='invoice_line_table']/tbody//tr[1]//td[1]" position="before">
            <td style="font-size: 12px;">
                <t t-if="line.move_id.stock_lot_ids">

                    <!-- Inicializar listas y valores -->
                    <t t-set="atributos_combinados" t-value="[]"/>
                    <t t-set="ramv_val" t-value="False"/>
                    <t t-set="motor_val" t-value="False"/>
                    <t t-set="lote_val" t-value="False"/>

                    <!-- Inicializar listas -->
                   <t t-set="atributos_combinados" t-value="[]"/>
                    <t t-set="atributos_usados" t-value="set()"/>
                    
                    <!-- 1️⃣ ATRIBUTOS DEL VARIANT -->
                    <t t-foreach="line.product_id.product_template_attribute_value_ids" t-as="attr">
                        <t t-set="atributos_combinados"
                            t-value="atributos_combinados + ['%s: %s' % (attr.attribute_id.name, attr.name)]"/>
                    
                        <!-- Guardar nombre del atributo -->
                        <t t-set="atributos_usados"
                            t-value="atributos_usados | set([attr.attribute_id.name])"/>
                    </t>
                    
                    <!-- 2️⃣ ATRIBUTOS DEL TEMPLATE (SOLO NO USADOS) -->
                    <t t-foreach="line.product_id.product_tmpl_id.attribute_line_ids" t-as="attr_line">
                        <t t-if="attr_line.attribute_id.name not in atributos_usados">
                            <t t-set="atributos_combinados"
                                t-value="atributos_combinados + ['%s: %s' % (attr_line.attribute_id.name, attr_line.value_ids[0].name)]"/>
                        </t>
                    </t>
                    
                    <t t-foreach="line.product_id.product_brand_id" t-as="brand">
                        <t t-set="atributos_combinados"
                            t-value="atributos_combinados + ['Marca: %s' % (brand.name)]"/>
                    </t>

                    <!-- Buscar el primer lote válido -->
                    <t t-foreach="line.move_id.stock_lot_ids" t-as="lot">
                        <t t-if="lot.product_id.id == line.product_id.id
                                  and lot.name not in lotes_linea_usados
                                  and not lote_val">
                    
                            <t t-set="ramv_val" t-value="lot.ramv or False"/>
                            <t t-set="motor_val" t-value="lot.motor_number or False"/>
                            <t t-set="lote_val" t-value="lot.name or False"/>
                    
                            <t t-set="lotes_linea_usados"
                               t-value="lotes_linea_usados + [lot.name]"/>
                        </t>
                    </t>

                    <!-- Mostrar contenido -->
                    
                    <t t-if="atributos_combinados">
                        <span t-esc="', '.join(atributos_combinados)"/>
                    </t>
                    
                    <t t-if="ramv_val">
                        <span>, Ramv: </span><span t-esc="ramv_val"/>
                    </t>
                    
                    <t t-if="motor_val">
                        <span>, Motor: </span><span t-esc="motor_val"/>
                    </t>
                    
                    <t t-if="lote_val">
                        <span>, Chasis: </span><span t-esc="lote_val"/>
                    </t>
                  
                </t>

                <!-- Si no hay lotes → deja un espacio en blanco -->
                <t t-if="not line.move_id.stock_lot_ids">
                </t>
            </td>
        </xpath>

    </template>

    <template id="remove_auxiliary_code_column" inherit_id="l10n_ec_edi.report_invoice_document">
        <!-- Eliminamos el encabezado de la columna "Auxiliary Code" -->
        <xpath expr="//th[@name='th_auxiliary_code']" position="replace"/>
        <xpath expr="//td[span[contains(@t-esc, 'line.product_id.l10n_ec_auxiliary_code')]]" position="replace"/>
    </template>
</odoo>
