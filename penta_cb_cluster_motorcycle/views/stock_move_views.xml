<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_move_line_operation_list_cluster" model="ir.ui.view">
        <field name="name">stock.move.line.operation.list.cluster</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="lot_name" position="attributes">
                <attribute name="string">Serial/lote/chasis</attribute>
            </field>
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="motor_number" column_invisible="parent.has_tracking == 'none' or not parent.show_lots_text"/>
                <field name="ramv" column_invisible="parent.has_tracking == 'none' or not parent.show_lots_text"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_cluster" model="ir.ui.view">
        <field name="name">stock.move.line.tree.cluster</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field name="motor_number" optional="show"/>
                <field name="ramv" optional="show"/>
            </field>
        </field>
    </record>

</odoo>