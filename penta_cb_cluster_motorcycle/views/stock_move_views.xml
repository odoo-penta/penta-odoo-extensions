<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_move_line_operation_list_cluster" model="ir.ui.view">
        <field name="name">stock.move.line.operation.list.cluster</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="lot_name" position="attributes">
                <attribute name="string">Serial/lote/chasis</attribute>
            </field>
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="motor_number" readonly="1" optional="hide" column_invisible="parent.has_tracking == 'none' or not parent.show_lots_text"/>
                <field name="ramv" readonly="1" optional="hide" column_invisible="parent.has_tracking == 'none' or not parent.show_lots_text"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_cluster" model="ir.ui.view">
        <field name="name">stock.move.line.tree.cluster</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field name="motor_number" optional="hide"/>
                <field name="ramv" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_search_inherit_motor" model="ir.ui.view">
        <field name="name">stock.move.search.inherit.motor</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="motor_number" string="Motor"/>
                <field name="ramv" string="RAMV"/>
                <filter string="Motor Number"
                    name="filter_with_motor"
                    domain="[('motor_number','!=',False)]"/>

                <filter string="RAMV"
                        name="filter_with_ramv"
                        domain="[('ramv','!=',False)]"/>
            </search>
        </field>
    </record>

</odoo>
