<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_quant_list_inherit_motor" model="ir.ui.view">
        <field name="name">stock.quant.list.inherit.motor</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_default_code" optional="hide"/>
                <field name="product_name" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="lot_motor_number" optional="hide"/>
                <field name="lot_ramv" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="warehouse_id" optional="hide"/>
            </xpath>

        </field>
    </record>

    <record id="view_stock_quant_search_inherit_motor" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit.motor</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="lot_motor_number" string="Motor"/>
                <field name="lot_ramv" string="RAMV"/>
                <filter string="Motor Number"
                    name="filter_with_motor"
                    domain="[('lot_motor_number','!=',False)]"/>

                <filter string="RAMV"
                        name="filter_with_ramv"
                        domain="[('lot_ramv','!=',False)]"/>
                <filter string="Almacen"
                        name="group_by_warehouse"
                        context="{'group_by': 'warehouse_id'}"/>
            </search>
        </field>
    </record>
  
</odoo>
