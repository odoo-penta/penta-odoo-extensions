<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_extract_authorization" model="ir.ui.view">
        <field name="name">account.move.form.inherit.extract.authorization</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_extract_authorization_number"
                        string="Extraer Número de Autorización"
                        type="object"
                        class="oe_highlight"
                        invisible="state == 'posted' or move_type != 'in_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>
