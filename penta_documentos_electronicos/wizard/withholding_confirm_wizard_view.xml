<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_withholding_confirm_wizard" model="ir.ui.view">
        <field name="name">withholding.confirm.wizard.form</field>
        <field name="model">withholding.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Advertencia">
                <group>
                    <p>
                        La retención  es de tipo bancaria pero la factura si se encuentra registrada con el mismo
                        número de documento sustento. Seguro desea continuar?
                    </p>
                    <field name="invoice_id"/>
                </group>
                <footer>
                    <button string="Continuar"
                            type="object"
                            name="action_continue"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>