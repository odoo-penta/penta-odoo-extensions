<odoo>
    <record id="kardex_wizard_form" model="ir.ui.view">
        <field name="name">kardex.wizard.form</field>
        <field name="model">kardex.wizard</field>
        <field name="arch" type="xml">
            <form string="Kardex Wizard">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="location_id"/>
                </group>
                <footer>
                    <button string="Print" type="object" name="check_report" class="btn-primary"/>
                    <button string="Print XLS" type="object" name="check_report" class="btn-primary" context="{'report_type': 'excel'}"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>