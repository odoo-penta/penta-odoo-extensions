<odoo>
    <record id="paperformat_kardex" model="report.paperformat">
        <field name="name">Kardex</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">32</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_kardex_report" model="ir.actions.report">
        <field name="name">Kardex PDF</field>
        <field name="model">kardex.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">penta_kardex.kardex_report</field>
        <field name="report_file">penta_kardex.kardex_report</field>
        <field name="paperformat_id" ref="paperformat_kardex"/>
        <field name="binding_model_id" ref="model_kardex_wizard"/>
        <field name="binding_type">report</field>
    </record>

</odoo>