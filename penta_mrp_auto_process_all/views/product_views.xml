<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_template_property_form_inherit_penta" model="ir.ui.view">
        <field name="name">product.template.property.form.inherit.penta</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']/group/group[3]" position="after">
                <group id="manufacture" string="Manufacture">
                    <field name="is_raw_material" widget="boolean_toggle"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>