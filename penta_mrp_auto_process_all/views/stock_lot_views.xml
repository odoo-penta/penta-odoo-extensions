<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_production_lot_form_penta" model="ir.ui.view">
    <field name="name">stock.lot.form.penta.pdi</field>
    <field name="model">stock.lot</field>
    <field name="inherit_id" ref="stock.view_production_lot_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/group" position="inside">
        <group >
          <field name="cpn" invisible="1"/>
          <field name="pdi"/>
          <field name="cpn_generated_at" readonly="1" invisible="1"/>
          <field name="pdi_generated_at" readonly="1"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
