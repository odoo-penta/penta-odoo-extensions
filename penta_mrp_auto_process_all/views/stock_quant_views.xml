<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_auto_process_list_inherit_motor" model="ir.ui.view">
        <field name="name">stock.quant.auto.process.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="before">
                <field name="lot_pdi" optional="show"/>
            </xpath>

        </field>
    </record>

    <record id="view_mrp_auto_process_search_inherit_motor" model="ir.ui.view">
        <field name="name">stock.quant.autoprocess.search.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="lot_pdi" string="PDI"/>
                <filter string="PDI"
                    name="filter_with_pdi"
                    domain="[('lot_pdi','!=',False)]"/>
            </search>
        </field>
    </record>
  
</odoo>
