<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="process_line_wizard_form_view" model="ir.ui.view">
        <field name="name">process.line.wizard.form.view</field>
        <field name="model">process.line.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Processing Line">
                <group>
                    <field name="production_id" readonly="1"/>
                    <field name="qty_to_produce"/>
                </group>
                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Produce"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="process_line_wizard_action" model="ir.actions.act_window">
        <field name="name">Process MRP Line</field>
        <field name="res_model">process.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">
            {'default_production_id': active_id}
        </field>
    </record>

</odoo>
