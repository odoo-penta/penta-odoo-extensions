<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_custom_check_form" model="ir.ui.view">
        <field name="name">account.payment.custom.check.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_check_printing.view_account_payment_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_number']" position="after">
                <field name="check_beneficiary" readonly="state not in ('draft','in_process')" invisible="not show_check_number" required="show_check_number"/>
            </xpath>
        </field>
    </record>

</odoo>
