<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ec_check_print_format_list" model="ir.ui.view">
        <field name="name">ec.check.print.format.list</field>
        <field name="model">ec.check.print.format</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ec_check_print_format_form" model="ir.ui.view">
        <field name="name">ec.check.print.format.form</field>
        <field name="model">ec.check.print.format</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="orientation"/>
                    </group>
                    <notebook>
                        <page name="print_lines" string="Print lines">
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="field_key"/>
                                    <field name="pos_x"/>
                                    <field name="pos_y"/>
                                    <field name="font_size"/>
                                    <field name="text_align"/>
                                    <field name="width"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ec_check_print_format" model="ir.actions.act_window">
        <field name="name">Check Formats (Penta)</field>
        <field name="res_model">ec.check.print.format</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_ec_check_print_format"
        name="Check Formats (Penta)"
        parent="account.menu_finance_configuration"
        action="action_ec_check_print_format"
    />
    
</odoo>
