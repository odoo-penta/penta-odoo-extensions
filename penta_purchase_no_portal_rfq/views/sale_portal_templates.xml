<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="purchase_order_portal_content_hide_prices_rfq" inherit_id="purchase.purchase_order_portal_content">

        <!-- Quitar precios en RFQ (sent) -->
        <xpath expr="//t[@t-set='display_price_and_taxes']" position="replace">
            <t t-set="display_price_and_taxes" t-value="not update_dates and order.state in ['purchase', 'done']"/>
        </xpath>

    </template>

</odoo>
