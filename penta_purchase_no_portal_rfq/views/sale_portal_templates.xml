<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="purchase_order_portal_content_hide_prices_rfq" inherit_id="purchase.purchase_order_portal_content">

        <!-- Quitar precios en RFQ (sent) -->
        <xpath expr="//t[@t-set='display_price_and_taxes']" position="replace">
            <t t-set="display_price_and_taxes" t-value="not update_dates and order.state in ['purchase', 'done']"/>
        </xpath>

    </template>

    <template id="portal_my_purchase_order_hide_total_rfq" inherit_id="purchase.portal_my_purchase_order">

        <!-- Ocultar total en RFQ -->
        <xpath expr="//t[@t-set='title']" position="replace">
            <t t-set="title">
                <t t-if="order.state in ['purchase', 'done']">
                    <h2 t-field="order.amount_total"
                        data-id="total_amount"
                        class="mb-0 text-break"/>
                </t>
            </t>
        </xpath>

    </template>

</odoo>
