<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada de account.journal -->
    <record id="view_account_journal_form_inherit_account_withhold" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.account.withhold</field>
        <field name="model">account.journal</field>
        <!-- Referencia a la vista original de Odoo -->
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">

            <!-- 
                En este ejemplo, insertamos el campo dentro del segundo <group> 
                (el que contiene la informaciÃ³n contable), 
                debajo de otros campos como 'default_account_id', etc. 
            -->
            <xpath expr="//page[@name='bank_account']/group/group" position="inside">
                <field name="account_withhold"/>
            </xpath>

        </field>
    </record>
</odoo>
