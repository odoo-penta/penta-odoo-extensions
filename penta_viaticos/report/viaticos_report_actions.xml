        <field name="report_name">penta_viaticos.report_viaticos_xlsx</field>
        <field name="report_file">penta_viaticos.report_viaticos_xlsx</field>
        <field name="binding_model_id" ref="approvals.model_approval_request"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Viaticos - %s' % (object.name or '')</field>
    </record>

</odoo>
