<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_approval_request_form_viaticos" model="ir.ui.view">
    <field name="name">approval.request.form.viaticos</field>
    <field name="model">approval.request</field>
    <field name="inherit_id" ref="approvals.approval_request_view_form"/>
    <field name="arch" type="xml">

      <!-- Cabecera viaticos: en columna derecha del formulario -->
      <xpath expr="//group[@name='request_details']" position="inside">
        <separator string="Viaticos" invisible="not category_id.viaticos_control"/>
        <field name="viaticos_job_title" readonly="1" invisible="not category_id.viaticos_control"/>
        <field name="viaticos_city_origin_id"
               invisible="not category_id.viaticos_control or category_id.viaticos_city_origin_policy == 'no'"
               required="category_id.viaticos_control and category_id.viaticos_city_origin_policy == 'required'"/>
        <field name="viaticos_city_destination_id"
               invisible="not category_id.viaticos_control or category_id.viaticos_city_destination_policy == 'no'"
               required="category_id.viaticos_control and category_id.viaticos_city_destination_policy == 'required'"/>
        <field name="viaticos_total_employee" readonly="1" invisible="not category_id.viaticos_control"/>
        <field name="viaticos_total_company" readonly="1" invisible="not category_id.viaticos_control"/>
      </xpath>

    </field>
  </record>

  <record id="view_approval_product_line_tree_viaticos" model="ir.ui.view">
    <field name="name">approval.product.line.tree.viaticos</field>
    <field name="model">approval.product.line</field>
    <field name="inherit_id" ref="approvals.approval_product_line_view_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//list" position="replace">
        <list editable="bottom" string="Productos" default_order="viaticos_date asc, id asc">
          <field name="company_id" column_invisible="True"/>
          <field name="viaticos_date" invisible="not parent.category_id.viaticos_control"/>
          <field name="product_id" required="parent.has_product == 'required'" context="{'search_default_filter_to_purchase': 1}"/>
          <field name="quantity"
                 column_invisible="parent.has_quantity == 'no' and not parent.category_id.viaticos_control"
                 required="(parent.has_quantity == 'required' or parent.category_id.viaticos_control) and parent.request_status != 'new'"/>
          <field name="viaticos_importe_solicitado" invisible="not parent.category_id.viaticos_control"/>
          <field name="viaticos_total_solicitado" invisible="not parent.category_id.viaticos_control" readonly="1"/>
          <field name="viaticos_importe_permitido" invisible="not parent.category_id.viaticos_control" readonly="1"/>
          <field name="viaticos_total_permitido" invisible="not parent.category_id.viaticos_control" readonly="1"/>
          <field name="viaticos_paid_by" invisible="not parent.category_id.viaticos_control"/>
          <field name="description"/>
          <field name="product_uom_id" groups="uom.group_uom" options="{'no_create': True, 'no_open': True}"/>
          <field name="product_uom_category_id" column_invisible="True"/>
        </list>
      </xpath>
    </field>
  </record>
</odoo>
