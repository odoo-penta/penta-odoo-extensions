<odoo>
    <record id="view_res_country_state_city_form" model="ir.ui.view">
        <field name="name">res.country.state.city.form</field>
        <field name="model">res.country.state.city</field>
        <field name="arch" type="xml">
            <form string="Ciudad" create="false" edit="false" delete="false">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_res_country_state_city_list" model="ir.ui.view">
        <field name="name">res.country.state.city.list</field>
        <field name="model">res.country.state.city</field>
        <field name="arch" type="xml">
            <list string="Ciudades" create="false" edit="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </list>
        </field>
    </record>


    <record id="action_res_country_state_city" model="ir.actions.act_window">
    <field name="name">Ciudades</field>
    <field name="res_model">res.country.state.city</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_res_country_state_city_list"/>  <!-- AsociaciÃ³n explÃ­cita -->
    </record>


    <menuitem id="menu_action_city"
              name="Ciudades"
              parent="contacts.menu_localisation"
              action="action_res_country_state_city"
              sequence="10"/>


</odoo>
