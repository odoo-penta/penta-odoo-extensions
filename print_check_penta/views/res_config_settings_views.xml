<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_config_settings_check_penta" model="ir.ui.view">
        <field name="name">res.config.settings.check.penta</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='print_vendor_checks_setting_container']" position="inside">
                <setting id="print_checks_penta" groups="account.group_account_user" string="Checks Penta" company_dependent="1" help="Print checks to pay your vendors">
                    <field name="ec_check_print_format_id"/>
                </setting>
            </xpath>
        </field>
    </record>
    
</odoo>
