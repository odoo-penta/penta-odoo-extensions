<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_print_check_wizard_form" model="ir.ui.view">
        <field name="name">print.check.wizard.form</field>
        <field name="model">print.check.wizard</field>
        <field name="arch" type="xml">
            <form string="Print check">
                <group>
                    <field name="payment_id"/>
                </group>

                <footer>
                    <button name="action_print"
                            type="object"
                            string="Print"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
